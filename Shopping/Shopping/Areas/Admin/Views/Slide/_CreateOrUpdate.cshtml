@model DataAccess.Models.SlideModel

@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.CreatedDateTime)
@Html.HiddenFor(model => model.CreatedBy)

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            @if (Model.Id > 0)
                            {
                                <div class="form-group">
                                    <div class="col-md-2">
                                        <label>Created date</label>
                                    </div>
                                    <div class="col-md-10">
                                        <strong>@Model.CreatedDateTime</strong>
                                    </div>
                                </div>
                            }
                            <div class="form-group">
                                <div class="col-md-2">
                                    <label class="control-label">Slider name</label>
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "k-textbox", style = "width: 80%" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    <label class="control-label">Title</label>
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "k-textbox", style = "width: 80%" } })
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    <label class="control-label">Image</label>
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ImagePath, new { htmlAttributes = new { @class = "k-textbox", style = "width: 80%" } })
                                    <a id="btnSelectImage" href="#">Select image</a>
                                    @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    <label class="control-label">Activate</label>
                                </div>
                                <div class="col-md-10">
                                    @Html.CheckBoxFor(model => model.Status)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $("#btnSelectImage").on('click',
            function(e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function(url) {
                    $("#@Html.IdFor(model => model.ImagePath)").val(url);
                };
                finder.popup();
            });
    });
</script>

