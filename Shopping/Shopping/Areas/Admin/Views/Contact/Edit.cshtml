@model DataAccess.Models.ContactModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", id = "receive-edit-form" }))
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            Thông tin phản hồi
        </h1>
        <div class="pull-right">
            <a class="btn bg-blue" href="@Html.Raw(Url.Action("List"))"><i class="fa fa-chevron-left" aria-hidden="true"></i> Quay Lại</a>
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Lưu
            </button>
            <button type="submit" name="ContinueEditing" value="true" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                Lưu và chỉnh sửa
            </button>
            <span id="button-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                Xóa
            </span>
            <span id="button-reply" class="btn bg-green-active">
                <i class="fa fa-check-circle-o"></i>
                Trả lời
            </span>
        </div>
    </div>

    @Html.Partial("_CreateOrUpdate", Model)
}
<div id="delete-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Xác nhận</h4>
            </div>
            @using (Html.BeginForm("Delete", "Contact", new { id = Model.Id }))
            {
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Không! cảm ơn.</button>
                    <button type="submit" class="btn btn-primary">Đồng ý</button>
                </div>
            }
        </div>
    </div>
</div>
<div id="reply-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Xác nhận</h4>
            </div>
            @using (Html.BeginForm("Reply", "Contact", new { Id = Model.Id, ReplyContent = Model.ReplyContent}))
            {
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn trả lời phản hồi này?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Không! cảm ơn.</button>
                    <button type="submit" class="btn btn-primary">Đồng ý</button>
                </div>
            }
        </div>
    </div>
</div>
<script>
    $("#button-delete").click(function() {
        $("#delete-modal").modal("show");
    });
    $("#button-reply").click(function () {
        $("#reply-modal").modal("show");
    });
</script>

