@model IEnumerable<DataAccess.Models.OrderDetailModel>

@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
}

<div class="ads-grid_shop">
    <div class="shop_inner_inf">
        <div class="privacy about">
            <h3>Order<span> Detail</span></h3>

            <div class="checkout-right">
                <h4>Total: <span id="totalProduct">@Model.Count() Products</span></h4>
                <table class="timetable_sub">
                    <thead>
                        <tr>
                            <th>SL No.</th>
                            <th>Product</th>
                            <th>Quality</th>
                            <th>Product Name</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                        <tr class="rem@(Model.ElementAt(i).Id)">
                            <td class="invert">@(i + 1)</td>
                            <td class="invert-image"><a href="#"><img src="../@Model.ElementAt(i).ProductImagePath" alt=" " class="img-responsive"></a></td>
                            <td class="invert">@Model.ElementAt(i).Quantity</td>
                            <td class="invert">@Model.ElementAt(i).ProductName</td>
                            <td class="invert">$@string.Format("{0:#,#}", Model.ElementAt(i).UnitPrice)</td>
                            <td class="invert">$@string.Format("{0:#,#}", Model.ElementAt(i).UnitPrice * Model.ElementAt(i).Quantity)</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




