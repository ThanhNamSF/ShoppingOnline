@model IEnumerable<DataAccess.Models.OrderModel>

@{
    ViewBag.Title = "GetAllOrderHistory";
}

<div class="ads-grid_shop">
    <div class="shop_inner_inf">
        <div class="privacy about">
            <h3>Chec<span>kout</span></h3>

            <div class="checkout-right">
                <h4>Total: <span id="totalProduct">@Model.Count() Orders</span></h4>
                <div id="window"></div>
                <table class="timetable_sub">
                    <thead>
                        <tr>
                            <th>SL No.</th>
                            <th>Code</th>
                            <th>Order date</th>
                            <th>Receiver name</th>
                            <th>Receiver address</th>
                            <th>Receiver phone</th>
                            <th>Total Money</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            <tr class="rem@(Model.ElementAt(i).Id)">
                                <td class="invert">@(i + 1)</td>
                                <td class="invert">@(Model.ElementAt(i).Code)</td>
                                <td class="invert">@(Model.ElementAt(i).CreatedDateTime)</td>
                                <td class="invert">@(Model.ElementAt(i).ReceiverName)</td>
                                <td class="invert">@(Model.ElementAt(i).ReceiverAddress)</td>
                                <td class="invert">@(Model.ElementAt(i).ReceiverPhone)</td>

                                <td class="invert">$@string.Format("{0:#,#}", Model.ElementAt(i).Amount)</td>
                                <td class="invert">
                                    <button class="btn btn-info" id="@Model.ElementAt(i).Id">Detail</button>
                                    <script>
                                    $(document).ready(function () {
                                        $("#@Model.ElementAt(i).Id").click(function () {
                                            var orderDetail = $("#window");
                                            orderDetail.kendoWindow({
                                                title: "Order detail",
                                                actions: ["Close"],
                                                content: "/OrderHistory/GetAllOrderDetailHistory?orderId=" + @Model.ElementAt(i).Id,
                                                visible: false
                                            }).data('kendoWindow').center();
                                            orderDetail.data("kendoWindow").open().maximize();
                                        });
                                    });
                                    </script>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="checkout-left">
                <div class="col-md-4 checkout-left-basket">
                    <a href="javascript:void(0);" onclick="history.go(-1);" style="width: 400px; display: block">Back</a>
                    <ul>
                        @foreach (var item in Model)
                        {
                            <li id="item@(item.Id)">@item.Code<i>-</i> <span id="totalItem@(item.Id)">$@string.Format("{0:#,#}", item.Amount)</span></li>
                        }
                        <li>Total <i>-</i> <span id="total">$@string.Format("{0:#,#}", Model.Sum(item => item.Amount))</span></li>
                    </ul>
                </div>

                <div class="clearfix"> </div>


                <div class="clearfix"></div>
            </div>
        </div>
    </div>
