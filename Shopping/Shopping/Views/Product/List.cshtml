}

<div class="ads-grid_shop">
    <div class="shop_inner_inf">
        <!-- tittle heading -->
        <!-- //tittle heading -->
        <!-- product left -->
        <div class="side-bar col-md-3">
            <div class="search-hotel">
                <h3 class="agileits-sear-head">Tìm kiếm..</h3>
                
                <form action="#" method="post">
                    <input type="hidden" name="ProductCategoryId" value="@Model.SearchCondition.ProductCategoryId"/>
                    <input type="search" value="@Model.SearchCondition.Name" placeholder="Tên sản phẩm..." name="Name">
                    <input type="submit" value=" ">
