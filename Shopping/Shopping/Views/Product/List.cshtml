                            </li>
                        </ul>
                    </div>
                    <!-- //price range -->
                    <!--preference -->
                    <div class="left-side">
                        <h3 class="agileits-sear-head">Tiêu chí</h3>
                        <ul>
                            <li>
                                <input name="Top" type="radio" class="checked" value="All" @(Model.SearchCondition.Top == Trend.All.ToString() ? "checked" : "")>
                                <span class="span">Tất cả</span>
                            </li>
                            <li>
                                <input name="Top" type="radio" class="checked" value="Hot" @(Model.SearchCondition.Top == Trend.Hot.ToString() ? "checked" : "")>
                                <span class="span">Bán chạy nhất</span>
                            </li>
                            <li>
                                <input name="Top" type="radio" class="checked" value="New" @(Model.SearchCondition.Top == Trend.New.ToString() ? "checked" : "")>
                                <span class="span">Mới nhất</span>
                            </li>
                        </ul>
                    </div>
                    <!-- // preference -->
                    <!-- discounts -->
                    <div class="left-side">
                        <h3 class="agileits-sear-head">Giảm giá</h3>
                        <ul>
                            <li>
                                <input value="0" name="Discount" type="radio" class="checked" @(Model.SearchCondition.Discount == 0 ? "checked" : "")>
                                <span class="span">Tất cả</span>
                            </li>
                            <li>
                                <input value="0.05" name="Discount" type="radio" class="checked" @(Model.SearchCondition.Discount == 0.05 ? "checked" : "")>
                                <span class="span">Từ 5% trở lên</span>
                            </li>
                            <li>
                                <input value="0.1" name="Discount" type="radio" class="checked" @(Model.SearchCondition.Discount == 0.1 ? "checked" : "")>
                                <span class="span">Từ 10% trở lên</span>
                            </li>
                            <li>
                                <input value="0.2" name="Discount" type="radio" class="checked" @(Model.SearchCondition.Discount == 0.2 ? "checked" : "")>
                                <span class="span">Từ 20% trở lên</span>
                            </li>
                            <li>
                                <input value="0.3" name="Discount" type="radio" class="checked" @(Model.SearchCondition.Discount == 0.3 ? "checked" : "")>
                                <span class="span">Từ 30% trở lên</span>
                            </li>
                            <li>
                                <input value="0.5" name="Discount" type="radio" class="checked" @(Model.SearchCondition.Discount == 0.5 ? "checked" : "")>
                                <span class="span">Từ 50% trở lên</span>
                            </li>
                            <li>
                                <input value="0.6" name="Discount" type="radio" class="checked" @(Model.SearchCondition.Discount == 0.6 ? "checked" : "")>
                                <span class="span">Từ 60% trở lên</span>
                            </li>
