                    </div>
                    <!-- //discounts -->
                    <!-- reviews -->
                    <div class="customer-rev left-side">
                        <h3 class="agileits-sear-head">Đánh giá của khách hàng</h3>
                        <ul>
                            <li>
                                <a href="#">
